@{
  Layout = "_Layout";
}

@model Factory.Models.Incident

<div class="mainBox">
  <h2>Add a machine and enginner to this incident</h2>
  <hr />
  @using (Html.BeginForm())
  {
      @Html.HiddenFor(model => model.IncidentId)

      @Html.Label("Machine")
      @Html.DropDownList("MachineId", null, "Please Select", htmlAttributes: new{required = "Please select a Machine"})       

      @Html.Label("Engineer")
      @Html.DropDownList("EngineerId", null, "Please Select", htmlAttributes: new{required = "Please select a Engineer"})      
      
      <input type="submit" value="Add" class="btn btn-info btn-large" />
  }  
</div>