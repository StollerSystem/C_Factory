@{
  Layout = "_Layout";
}

@model Factory.Models.Machine

<div class="mainBox">
  <h2>Edit Machine</h2>
  <hr />
  <h4>Edit this Machine @Html.DisplayFor(model => model.MachineName)</h4>
  @using (Html.BeginForm())
  {
      @Html.HiddenFor(model => model.MachineId)
      @Html.LabelFor(model => model.MachineName)
      @Html.TextBoxFor(model => model.MachineName, 
      new {@required="required"})
     
      <input type="submit" value="Save" />
  }
  <p>@Html.ActionLink("Back to list", "Index",null,null, new { @class = "btn btn-info btn-large" })</p>
</div>